<odoo>
    <template id="tutorial_block2" inherit_id="website.snippets" name="D Block">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="odoo-snippet.d_block" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
    <template id="tutorial_block3" inherit_id="website.snippets" name="Com Block">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="odoo-snippet.data_company" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>

    <template id="tutorial_block4" inherit_id="website.snippets" name="User Block">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="odoo-snippet.data_user" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
    <template id="tutorial_block5" inherit_id="website.snippets" name="Carousel Block">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="odoo-snippet.carousel_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
</odoo>