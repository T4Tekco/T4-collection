<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <template id="progressbar" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
                <t t-snippet="geminate_ecommerce_theme.progressbar_1" t-thumbnail="/geminate_ecommerce_theme/static/src/img/snippets/progressbar.png"/>
            </xpath>
        </template>
        <template id="progressbar_1" name="Progressbar">
            <section class="progressbar_0 s_progressbar">
                <div class="skillbar-wrapper">
                    <div class="skillbar clearfix html5" data-percent="75%">
