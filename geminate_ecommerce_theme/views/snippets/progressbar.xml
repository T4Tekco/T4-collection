                        <div class="skill-bar-percent">35%</div>
                    </div>
                    <div class="skillbar clearfix jquery" data-percent="45%">
                        <h4 class="skillbar-title"><span>jQuery</span></h4>
                        <div class="skillbar-bar"></div>
                        <div class="skill-bar-percent">45%</div>
                    </div>
                    <div class="skillbar clearfix php" data-percent="80%">
                        <h4 class="skillbar-title"><span>PHP</span></h4>
                        <div class="skillbar-bar"></div>
                        <div class="skill-bar-percent">80%</div>
                    </div>
                    <div class="skillbar clearfix wordpress" data-percent="90%">
