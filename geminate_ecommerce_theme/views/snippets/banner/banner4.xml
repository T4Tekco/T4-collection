<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="banner4" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
                <t t-snippet="geminate_ecommerce_theme.s_banner4" t-thumbnail="/geminate_ecommerce_theme/static/src/img/extra_snippet/banner/banner_4.png"/>
            </xpath>
        </template>
        <template id="s_banner4" name="Banner4">
			<section id="gem_baner_4_hero">
			    <div class="container">
			      <div class="row justify-content-between">
			        <div class="col-lg-7 order-2 d-flex align-items-center">
			          <div class="span_typed">
			          	<span class="gem_ityped"></span>
			          </div>
			        </div>
			        <div class="btn_centre_bannner_4 text-center">
			          <a href="#" class="gem_bn4_btn-get-started btn-primary">Get Started</a>
			        </div>
			        <div class="col-lg-5 order-1 order-lg-2 gem_bn4_hero-img">
			          <img src="/geminate_ecommerce_theme/static/src/img/main_image/banners/banner_4_img.png" class="img-fluid animated"/>
			        </div>
			      </div>
			    </div>
			    <svg class="gem_bn4_hero-waves" xmlns="http://www.w3.org/2000/svg" viewBox="0 24 150 28" preserveAspectRatio="none">
			    	<defs>
			        	<path id="wave-path" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"/>
			      	</defs>
			    	<g class="gem_wave1">
			        	<use href="#wave-path" x="50" y="3" fill="rgba(255,255,255,.1)"/>
			      	</g>
			    	<g class="gem_wave2">
			        	<use href="#wave-path" x="50" y="0" fill="rgba(255,255,255,.2)"/>
			      	</g>
			    	<g class="gem_wave3">
			        	<use href="#wave-path" x="50" y="9" fill="#fff"/>
			      	</g>
			    </svg>
			</section>
        </template>
    </data>
</odoo>