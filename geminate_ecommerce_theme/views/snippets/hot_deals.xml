<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="hot_deals" inherit_id="website.s_countdown">
            <xpath expr="//div[hasclass('container')]" position="replace">
                <div class="container set-bg spad gem_hot_deals">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="categories__hot__deal">
                                <img src="/geminate_ecommerce_theme/static/src/img/main_image/hot_deals/bag_img.png" alt=""/>
                                <div class="hot__deal__sticker">
                                    <span>Sale Of</span>
                                    <h5>$29.99</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6  offset-lg-1">
                            <div class="section-title">
                                <h2>Deal Of The Week</h2>
                                <h3>Multi-pocket Chest Bag Black</h3>
                            </div>
                            <div class="s_countdown_canvas_wrapper sasasa text-center"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>