<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="btn_hvr_5" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
                <t t-snippet="geminate_ecommerce_theme.s_5_hvr_btn" t-thumbnail="/geminate_ecommerce_theme/static/src/img/extra_snippet/btn/btn_main.png"/>
            </xpath>
        </template>
        <template id="s_5_hvr_btn" name="Btn 5">
            <div class="gem_btn_luxury_shine">
                <a class="btn_shine_gem btn-2_gem_shine">Hover Me</a>
            </div>
        </template>
        <template id="ani_btn5_snippet_options" inherit_id="website.snippet_options" name="ani_btn5 snippet options">
            <xpath expr="//*[@t-set='so_content_addition_selector']" position="inside">, .gem_btn_luxury_shine</xpath>
        </template>
    </data>
</odoo>
