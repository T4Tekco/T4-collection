<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="btn_hvr_6" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
                <t t-snippet="geminate_ecommerce_theme.s_6_hvr_btn" t-thumbnail="/geminate_ecommerce_theme/static/src/img/extra_snippet/btn/btn_main.png"/>
            </xpath>
        </template>
        <template id="s_6_hvr_btn" name="Btn 6">
            <div class="border_plus_gem_hvr_ef">
                <div class="container">
                    <a class="btn btn-4_border_plus">
                        Hover Me
                        <span class="border_plus_span"></span>
                    </a>
                </div>
            </div>
        </template>
        <template id="ani_btn6_snippet_options" inherit_id="website.snippet_options" name="ani_btn6 snippet options">
            <xpath expr="//*[@t-set='so_content_addition_selector']" position="inside">, .border_plus_gem_hvr_ef</xpath>
        </template>
    </data>
</odoo>
