<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="btn_hvr_3" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
                <t t-snippet="geminate_ecommerce_theme.s_3_hvr_btn" t-thumbnail="/geminate_ecommerce_theme/static/src/img/extra_snippet/btn/btn_main.png"/>
            </xpath>
        </template>
        <template id="s_3_hvr_btn" name="Btn 3">
          <div class="gem_text_chnage_on_hover">
                <div class="container">
                    <button data-hover="click me!" class="change_txt">
                        <div class="content_hover">Hover me!</div>
                    </button>
                </div>
            </div>
        </template>
        <template id="ani_btn3_snippet_options" inherit_id="website.snippet_options" name="ani_btn3 snippet options">
            <xpath expr="//*[@t-set='so_content_addition_selector']" position="inside">, .gem_text_chnage_on_hover</xpath>
        </template>
    </data>
</odoo>
